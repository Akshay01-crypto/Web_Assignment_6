<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mt-4 mb-2">
            <h2 class="text-white">Courses</h2>
            <a href="/courses/add" class="btn btn-success">Add New Course</a>
        </div>

        <hr class="border-light" />

        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-warning text-center">
                <strong><%= message %></strong>
            </div>
        <% } else if (courses && courses.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% courses.forEach(function(course) { %>
                            <tr>
                                <td>
                                    <a href="/course/<%= course.courseId %>"><%= course.courseCode %></a>
                                </td>
                                <td>
                                    <a href="/students?course=<%= course.courseId %>"><%= course.courseDescription %></a>
                                </td>
                                <td class="text-center">
                                    <a href="/course/delete/<%= course.courseId %>" class="btn btn-danger btn-sm">
                                        Remove
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-warning text-center">
                <strong>No courses found.</strong>
            </div>
        <% } %>
    </div>
</div>
