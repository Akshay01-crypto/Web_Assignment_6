<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Add a New Student</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/students/add" onsubmit="return showAlert();">
                    <fieldset>
                        <legend class="mb-4">Personal Information</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="firstName" class="form-label">First Name:</label>
                                    <input class="form-control" id="firstName" name="firstName" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="lastName" class="form-label">Last Name:</label>
                                    <input class="form-control" id="lastName" name="lastName" type="text" required />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input class="form-control" id="email" name="email" type="email" required />
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="addressStreet" class="form-label">Address (Street):</label>
                                    <input class="form-control" id="addressStreet" name="addressStreet" type="text" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="addressCity" class="form-label">Address (City):</label>
                                    <input class="form-control" id="addressCity" name="addressCity" type="text" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="addressProvince" class="form-label">Address (Province):</label>
                                    <input class="form-control" id="addressProvince" name="addressProvince" type="text" />
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend class="mb-4">Academic Information</legend>
                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" id="TA" name="TA" type="checkbox">
                            <label class="form-check-label" for="TA">Teaching Assistant</label>
                        </div>
                        <div class="form-group mb-3">
                            <label for="course" class="form-label">Enrolled in Course:</label>
                            <% if (courses && courses.length > 0) { %>
                                <select class="form-control" id="course" name="course">
                                    <option value="">Select Course</option>
                                    <% courses.forEach(function(course) { %>
                                        <option value="<%= course.courseId %>"><%= course.courseCode %></option>
                                    <% }); %>
                                </select>
                            <% } else { %>
                                <div>No Courses Available</div>
                            <% } %>
                        </div>
                    </fieldset>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-2">Add Student</button>
                        <a href="/students" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showAlert() {
        alert('Student added successfully!');
        return true;
    }
</script>