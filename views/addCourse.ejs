<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Add a New Course</h2>
            </div>
            <div class="card-body">
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= message %>
                    </div>
                <% } %>

                <form method="POST" action="/courses/add" novalidate>
                    <div class="form-group mb-3">
                        <label for="courseCode" class="form-label">Course Code:</label>
                        <input class="form-control" id="courseCode" name="courseCode" type="text" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="courseDescription" class="form-label">Course Description:</label>
                        <input class="form-control" id="courseDescription" name="courseDescription" type="text" required />
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">Add Course</button>
                        <a href="/courses" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
